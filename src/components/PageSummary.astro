---
// PageSummary – Server-rendered summary box for content pages.
// Shows word count, topic tags, and link to flashcard practice section.
interface Props {
  wordCount: number;
  topics: string[];
}
const { wordCount, topics } = Astro.props;
---

<div class="page-summary">
  <span class="ps-count">{wordCount} words</span>
  <span class="ps-sep">&middot;</span>
  <span class="ps-topics">{topics.join(" · ")}</span>
</div>

<style>
  .page-summary {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.4rem 0.6rem;
    padding: 0.6rem 1rem;
    margin: 0.75rem 0 0.5rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    background: var(--sl-color-bg-nav);
    font-size: var(--sl-text-sm);
  }
  .ps-count {
    font-weight: 700;
    color: var(--sl-color-text-accent);
    white-space: nowrap;
  }
  .ps-sep {
    color: var(--sl-color-gray-3);
  }
  .ps-topics {
    color: var(--sl-color-gray-2);
  }
  @media (max-width: 480px) {
    .page-summary {
      font-size: var(--sl-text-xs);
      padding: 0.5rem 0.75rem;
    }
  }
</style>
